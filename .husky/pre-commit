#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running ESLint..."
npm run lint --if-present
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix linting errors."
  exit 1
fi

# Run TypeScript check
echo "ğŸ”§ Running TypeScript check..."
npx tsc --noEmit --skipLibCheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix type errors."
  exit 1
fi

# Validate environment variables
echo "ğŸ” Validating environment variables..."
npm run validate-env --if-present
if [ $? -ne 0 ]; then
  echo "âŒ Environment validation failed."
  exit 1
fi

# Quick build test (no full build for speed)
echo "ğŸ—ï¸  Quick build test..."
npx next build --dry-run 2>/dev/null || npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Build test failed."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
